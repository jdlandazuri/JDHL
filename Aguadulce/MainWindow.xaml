<Window x:Class="Aguadulce.MainWindow"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mover Cuadro" Height="411" Width="551">
    <Grid>
        <Canvas Name="canvas" Width="450" Height="300" Background="White">
            <Rectangle Name="rectangulo" Width="50" Height="50" Fill="Blue" Canvas.Left="0" Canvas.Top="0"/>
        </Canvas>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="10">
            <TextBox Name="coordenadaX" Width="50" Margin="5" TextChanged="Coordinate_TextChanged"/>
            <TextBox Name="coordenadaY" Width="50" Margin="5" TextChanged="Coordinate_TextChanged"/>
        </StackPanel>
    </Grid>
</Window>